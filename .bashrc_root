alias nvsC='nvim ~/.ssh/config'
alias nvb='nvim ~/.bashrc'
alias nvxI='nvim ~/.xinitrc'
alias vxI='vim ~/.xinitrc'
alias vxM='vim ~/.xmonad/xmonad.hs'
alias vO='vim ~/.config/openbox/rc.xml'
alias voA='vim ~/.config/openbox/autostart.sh'
